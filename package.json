{
    "name": "webshop",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": "20"
    },
    "workspaces": [
        "project/*"
    ],
    "scripts": {
        "dev": "run-p dev:backend dev:web",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "start": "./start-dev.sh",
        "dev:backend": "cd project/backend && ./gradlew bootRun",
        "dev:web": "npm run dev -w project/frontend",
        "build": "run-p build:backend build:web",
        "build:pipeline": "run-p build:web",
        "build:backend": "cd project/backend && ./gradlew build",
        "build:web": "npm run build -w project/frontend",
        "preview": "run-p preview:api preview:web",
        "preview:backend": "cd project/backend && ./gradlew bootRun",
        "preview:web": "npm run preview -w project/frontend",
        "test:frontend": "npm run test -w project/tests",
        "backend:test": "cd project/backend && ./gradlew test",
        "typedoc": "typedoc",
        "db:init": "node scripts/init-db.js"
    },
    "devDependencies": {
        "@hboictcloud/eslint-plugin": "1.0.1",
        "@types/mysql": "^2.15.26",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "6.20.0",
        "@typescript-eslint/parser": "6.20.0",
        "concurrently": "^8.2.2",
        "eslint": "8.56.0",
        "mysql": "^2.18.1",
        "npm-run-all": "^4.1.5",
        "tsx": "4.7.0",
        "typedoc": "0.25.13",
        "typescript": "5.3.3"
    }
}
